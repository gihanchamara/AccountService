{
  "openapi": "3.0.1",
  "info": {
    "title": "Account Service API",
    "description": "API for managing user accounts",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080/v1/accounting",
      "description": "Local server"
    }
  ],
  "paths": {
    "/accounts": {
      "get": {
        "summary": "Get accounts for a user",
        "description": "Returns a list of accounts belongs to the user.",
        "operationId": "getAccounts",
        "parameters": [
          {
            "name": "userId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            },
            "description": "The ID of the user"
          }
        ],
        "responses": {
          "200": {
            "description": "A list of accounts",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Account"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "Account": {
        "$ref": "account.json"
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}